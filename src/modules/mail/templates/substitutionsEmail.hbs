      <td style="padding: 10px; border-bottom: 1px solid #ccc;">{{this.hour}}</td>
      <td style="padding: 10px; border-bottom: 1px solid #ccc;">{{this.class}}</td>
      <td style="padding: 10px; border-bottom: 1px solid #ccc;">{{this.classroom}}</td>
